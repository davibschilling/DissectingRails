gem 'gritter', '~> 1.2'
# Unobtrusive nested forms handling, using jQuery. Use this and discover cocoon-heaven.
gem 'cocoon', '~> 1.2', '>= 1.2.12'
# Autoload dotenv in Rails.
gem 'dotenv-rails', '~> 2.7', '>= 2.7.2'
# Use aws-sdk for S3 support in CarrierWave
